<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResultActivity">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/tvName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tvMobile"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/tvEmail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMobile"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tvTotalScore"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/rvResults"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnRetry"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tvTotalScore"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorPrimary"
        android:text="Retry"
        android:textColor="@color/design_default_color_surface"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btnRetry"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorPrimary"
        android:text="Done"
        android:textColor="@color/design_default_color_surface"
        android:textSize="14sp" />
</RelativeLayout>